<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextVideoButton"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/nextVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Video"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/videoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/videoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Play/Stop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nextVideoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radio Play/Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoButton"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/nextRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Radio"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
